{{>header}}

<h1 class="hello"></h1>
<div class="container" id="container-id">



    <div class="row">
        
</div>


<h3 class="ui huge header">Choose a state and vote 'Yes'/'No' on the bills sponsored by senators from that state</h3>


<div id="mapdiv"></div>

<button class="ui basic button match-btn" id="match-btn">State <i class="percent icon"></i></button>
<div id="newDiv">
    {{!-- Percent Content --}}
</div>

<p class="show-question">Do you support this bill?</p>
<ul class="bills-ul">
    {{#each bills}}
        <li class="js-bill" data-bill_uri="{{this.results.0.bill_uri}}" data-sponsor="{{this.results.0.sponsor}}" data-sponsor_state="{{this.results.0.sponsor_state}}">
            <h4 class="header">{{this.results.0.title}}</h4>
            {{#if this.results.0.summary}}
                <div>{{this.results.0.summary}}</div>
            {{else}}
                <div>{{this.results.0.summary_short}}</div>
            {{/if}}
            <p>
                {{this.results.0.sponsor_state}}
            </p>
            <p>
               {{this.results.0.sponsor}}
            </p>
            <p>
                {{this.results.0.latest_major_action}}
            </p>
            <div>
                <button type="button" name="button" class="js-btn-choice js-btn-yes" value="yay">YES</button>
                <button type="button" name="button" class="js-btn-choice js-btn-no" value="nay">NO</button>
            </div>
            <br><br><br>
        </li>
    {{/each}}
    {{>footer}}
</ul>

